<?xml version="1.0"?>

<!-- Generated 04/24/2015 16:58:13

Configuration for 'dbgwfloansDB' database service

-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


    <bean 
        id="dbgwfloansDB"
        class="com.dbgwfloansdb.DbgwfloansDB"
        scope="singleton"
        lazy-init="true">
        <property name="dataServiceManager">
            <ref bean="dbgwfloansDBDataService"/>
        </property>
        <property name="taskManager">
            <ref bean="dbgwfloansDBTaskMgr"/>
        </property>
    </bean>


    <bean 
        class="com.wavemaker.runtime.data.spring.WMPropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:dbgwfloansDB.properties</value>
            </list>
        </property>
    </bean>

    <bean 
        id="dbgwfloansDBDataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource" 
        lazy-init="true">
        <property name="driverClassName" value="${dbgwfloansDB.driverClassName}"/>
        <property name="url" value="${dbgwfloansDB.connectionUrl}"/>
        <property name="username" value="${dbgwfloansDB.username}"/>
        <property name="password" value="${dbgwfloansDB.password}"/>
    </bean>


    <bean 
        id="dbgwfloansDBTxMgr" 
        class="org.springframework.orm.hibernate3.HibernateTransactionManager"
        lazy-init="true">
        <property name="sessionFactory">
            <ref bean="dbgwfloansDBSessionFactory"/>
        </property>
    </bean>


    <bean 
        id="dbgwfloansDBHibernateTemplate"
        class="org.springframework.orm.hibernate3.HibernateTemplate"
        lazy-init="true">
        <property name="sessionFactory"> 
            <ref bean="dbgwfloansDBSessionFactory"/>
        </property>
    </bean>  


    <bean 
        id="dbgwfloansDBSessionFactory" 
        class="com.wavemaker.runtime.data.spring.ConfigurationAndSessionFactoryBean"
        lazy-init="true">

        <!-- A unique name for this SessionFactory's configuration -->
        <property name="name" value="dbgwfloansDB"/>
        <property name="dataSource" ref="dbgwfloansDBDataSource"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${dbgwfloansDB.dialect}</prop>
                <prop key="hibernate.transaction.factory_class">
                    org.hibernate.transaction.JDBCTransactionFactory
                </prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                
            </props> 
        </property>

        <property name="mappingResources">
            <list>

<value>com/dbgwfloansdb/data/Tbcodename.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbuser.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbbranch.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbcodes.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbdocuments.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbproductcount.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbproductdocs.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbloanproducts.hbm.xml</value>
<value>com/dbgwfloansdb/data/Tbrole.hbm.xml</value>

<value>com/dbgwfloansdb/data/Tbcodename.ql.xml</value>
<value>com/dbgwfloansdb/data/app-queries.ql.xml</value>

            </list>
        </property>

    </bean>


    <!-- the data service bean instance is injected into the service bean -->
    <bean 
        id="dbgwfloansDBDataService" 
        class="com.wavemaker.runtime.data.spring.SpringDataServiceManager"
        lazy-init="true">
        <constructor-arg>
            <!-- the value of the "name" property of the SessionFactory -->
            <value>dbgwfloansDB</value>
        </constructor-arg>
        <constructor-arg>
            <ref bean="dbgwfloansDBHibernateTemplate"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="dbgwfloansDBTxMgr"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="dbgwfloansDBTaskMgr"/>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="useIndividualCRUDOperations" value="false"/>
                <entry key="refreshEntities" value=""/> 
            </map>
        </constructor-arg>
    </bean>


    <bean 
        id="dbgwfloansDBTaskMgr"
        class="com.wavemaker.runtime.data.DefaultTaskManager"
        lazy-init="true"/>

    <bean class="com.wavemaker.runtime.service.events.EventWire"
        lazy-init="false">
        <property name="serviceWire" ref="dbgwfloansDBServiceWire"/>
        <property name="eventListener">
            <bean class="com.wavemaker.runtime.data.DataServiceEventListener"/>
        </property>
    </bean>

    <bean id="dbgwfloansDBServiceWire"
        class="com.wavemaker.runtime.service.reflect.ReflectServiceWire"
        lazy-init="false" scope="singleton">
        <property name="serviceId" value="dbgwfloansDB"/>
        <property name="serviceType" ref="DataService"/>
    </bean>

</beans>
